extends ../template.pug

mixin post(name, date, link)
	div.post
		h3.name
			a(href=link) #{name}
		div.post-meta
			span.date #{date}

mixin blogHeader(title, titleLink, back, backLink)
	h1
		a.page-title(href=titleLink)= title
		= " "
		a.page-title.subpage(href=backLink)= back

block body
	+blogHeader("Akshay's Blog", "/blog/", "(back to home)","/")
	h2 Posts
	div.posts
		+post("Electricity Dissagregation", "12-15-2017", "/blog/electricity.html")
		+post("Colors", "12-09-2017", "/blog/colors.html")
